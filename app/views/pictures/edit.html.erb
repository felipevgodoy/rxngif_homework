<h1>Edit picture</h1>

<form action="http://localhost:3000/update_picture/<%= @pic.id %>">
  <div>
    <label for="the_caption">Caption:</label>
    <input id="the_caption" value ="<%= @pic.caption %>" type="text" name="caption">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input id="image_url" value ="<%= @pic.source %>" type="text" name="source">
  </div>
  <div>
    <input type="submit" value="Edit Picture">
  </div> 
</form>